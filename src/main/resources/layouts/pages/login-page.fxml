<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="loginVBox" alignment="CENTER" prefHeight="540.0" prefWidth="520.0" spacing="15" styleClass="login-vbox" stylesheets="@../../styles/components/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">

    <Label fx:id="loginLabel" contentDisplay="CENTER" styleClass="login-label" text="Login" textFill="#ff6b81" />

    <TextField fx:id="emailField" promptText="Username" styleClass="email-field" />

    <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field" />

    <HBox fx:id="buttonsHBox" alignment="CENTER" spacing="10">
        <Button fx:id="loginButton" onAction="#handleLogin" styleClass="login-button" text="Login" />
        <Button fx:id="registerButton" onAction="#goToRegisterPage" styleClass="register-button" text="Register" />
    </HBox>

    <Button fx:id="exitButton" onAction="#handleExit" styleClass="exit-button" text="Exit" />

</VBox>